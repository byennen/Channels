!!!
%html
  %head
    %title Altimarc - Entertainment. Elevated. - Beta
    %meta{:content => "#{@description}", :name => "description"}
    %meta{:content => "#{@keywords}", :name => "keywords"}
    %meta{:content => "ALTIMARC, LLC", :name => "author"}
    %meta{:content => "index,follow", :name => "robots"}
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    #container.container
      = render 'shared/navigation'
      #wrapper
        %header
          = link_to image_tag('layout/header-logo.png'), root_url
        %div{ :style => 'overflow: auto;' }
          = render 'shared/flash_messages', :locals => { :flash => flash }
          = yield
          %footer{ :style => 'text-align: center; margin: 20px 0 40px;  color: #999999 !important; clear: both; border: none;' }
            .inside{ :style => 'margin: 10px; padding: 40px 0 20px; border-top: 1px solid #9A9A9A;' }
              = image_tag('layout/footer-logo.png')
              %p 
                &copy;
                = Time.now.year
                = link_to 'ALTIMARC, LLC.', 'http://altimarc.com'
                %span All rights reserved.
              %ul
                %li= link_to 'Facebook', 'https://www.facebook.com/pages/Altimarc/243050725779865', :target => '_blank'
                %li= link_to 'Twitter', 'https://twitter.com/altimarc', :target => '_blank'
                %li= mail_to 'press@altimarc.com', 'Press'
                %li= mail_to 'ads@altimarc.com', 'Ad Sales'
    = render 'layouts/ga'
