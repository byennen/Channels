!!!
%html
  %head
    %title Altimarc - Entertainment. Elevated. - Beta
    %meta{:content => "#{@description}", :name => "description"}
    %meta{:content => "#{@keywords}", :name => "keywords"}
    %meta{:content => "ALTIMARC, LLC", :name => "author"}
    %meta{:content => "index,follow", :name => "robots"}
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    #container.container
      %div{ :style => 'margin: 50px auto 0;' }
        = yield
      %div{ :style => 'text-align: center; margin: 20px 0 40px;' }
        %p 
          All text and design is copyright &copy;
          = Time.now.year
          = link_to 'ALTIMARC, LLC.', 'http://altimarc.com'
          %span All rights reserved.
          = mail_to 'contact@altimarc.com', 'Contact'
