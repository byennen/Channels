!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title Channels
      = csrf_meta_tags
      / Le HTML5 shim, for IE6-8 support of HTML elements
      /[if lt IE 9]
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      = stylesheet_link_tag "admin/application", :media => "all"
      = favicon_link_tag
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = render "layouts/#{current_user.role}_nav"
    .container-fluid
      = render 'shared/flash_messages', :locals => { :flash => flash }
      - if params[:controller] == "admin/dashboard" && params[:action] == "index" || params[:controller] == "admin/channels"
        .content-boxes
          = yield
      - else
        .content-background
          - unless params[:action] == "show" || params[:controller] = "admin/pages"
            = render "admin/shared/sub_nav"
          = yield
    %footer
      %p
        &copy;
        = Time.now.year
        = link_to 'ALTIMARC, LLC.', 'http://altimarc.com'


    = javascript_include_tag "admin/application"
