        %strong Get Help
        %ul.footer
          -#%li= link_to "FAQ", faq_url, :class => 'pjax'
          -#%li= link_to "Customer Support", customer_support_url, :class => 'pjax'
          %li= link_to "Refund Policy", refund_url, :class => 'pjax'
