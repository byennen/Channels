#footer
  .container
    .row
      .span4
        %strong Company
        %ul.footer
          %li= link_to "Home", root_url
          %li= link_to "About Altimarc", about_url
          %li= link_to "Blog", "#"
          %li= link_to "Press", "#"
          %li= link_to "Our Team", "#"
          %li= link_to "Jobs", "#"
          %li= link_to "Altimarc For Your Business", about_url        
          
      .span4
        %strong Get Help
        %ul.footer
          %li= link_to "FAQ", "#"
          %li= link_to "Customer Support", "#"
          %li= link_to "Return Policy", "#"
          %li= link_to "Terms Of Use", "#"
          %li= link_to "Privacy Statement", "#"
          %li= link_to "Safe Harbor", "#"
          %li= link_to "Contact Us", "#"

      .span4
        %strong Sign up for our Giveaways
        %p and receive exclusive offers
        %form.wellclear.form-inline
          %input.input-large{:placeholder => "Email", :type => "text"}
            %button.btn.btn-danger{:type => "submit"} Sign up
        %ul.footer
          %li
            = link_to image_tag('layout/icons/facebook.png', :width => "30"), "http://facebook.com/altimarc"
            = link_to image_tag('layout/icons/twitter.png', :width => "30"), "http://twitter.com/altimarc"
            = link_to image_tag('layout/icons/pinterest.png', :width => "30"), "http://pinterest.com/altimarc"
            = link_to image_tag('layout/icons/googleplus.png', :width => "30"), "http://googleplus.com/altimarc"        
        %p.copyright
          &copy;
          = Time.now.year
          = link_to 'ALTIMARC, LLC.', root_url
          %span | All rights reserved.