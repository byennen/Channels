#footer
  .container-fluid
    .row-fluid
      .span3
        %strong Company
        %ul.footer
          %li= link_to "Home", root_url, :class => 'pjax'
          %li= link_to "About Altimarc", about_url, :class => 'pjax'
          -#%li= link_to "Blog", "#", :class => 'pjax'
          %li= link_to "Press", press_url, :class => 'pjax'
          -#%li= link_to "Our Team", our_team_url, :class => 'pjax'
