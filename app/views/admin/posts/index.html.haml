.row-fluid
  .span12
    .box.grad_colour_dark_blue
      %h2.box_head.round_top Photo Gallery
      %a.settings.box_button_3{:href => "#", :title => "config"}  
      %a.toggle.box_button_2{:href => "#", :title => "toggle"}  
      %a.destroy.box_button_1{:href => "#", :title => "close"}  
      .toggle_container
        .block.box_content.round_bottom.padding_20
          %header
            %h1 Posts
            %table.table.table-striped
              %thead
                %tr
                  %th Title
                  %th Feature
                  %th
                  %th
                  %th
              %tbody
                - @posts.each do |post|
                  %tr
                    %td= post.title
                    %td= post.feature
                    %td
                      %a.btn{:href => edit_admin_channel_post_path(@channel, post)}
                        %i.icon-pencil
                        Edit
                      %a.btn.btn-danger{:href => admin_channel_post_path(@channel, post), :'data-method' => :delete, :'data-confirm' => t('web-app-theme.confirm', :default => 'Are you sure?')}
                        %i.icon-trash.icon-white
                        Destroy

            .form-actions
              %a.btn.btn-primary{:href => new_admin_channel_post_path}
                %i.icon-plus-sign.icon-white
                New post
              or
              = link_to 'Go Back', url_for(:back), :class => 'btn'

