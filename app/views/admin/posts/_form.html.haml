= simple_form_for [:admin, @channel, @post], :html => {:multipart => true, :class => 'form-horizontal'} do |f|
  .form-inputs
    = f.input :title, :input_html => {:class => "input-xlarge"}
    = f.input :description, :input_html => {:class => "input-xlarge", :cols => 900, :rows => 20}
    .event
      = f.input :start_date
      = f.input :end_date
      = f.input :link
    .giving
      = f.input :logo
    
    = f.input :publish_date
    
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    or
    = link_to 'Go Back', url_for(:back), :class => 'btn'