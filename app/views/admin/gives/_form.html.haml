= simple_form_for [:admin, @channel, @give], :html => {:multipart => true, :class => 'form-horizontal'} do |f|
  .form-inputs
    = f.input :title, :input_html => {:class => "input-xlarge"}
    = f.input :description, :input_html => {:class => "input-xlarge"}
    = f.input :logo, :as => :file, :label => "Logo"
    = f.input :location, :input_html => {:class => "input-xlarge"}
    = f.input :link, :input_html => {:class => "input-xlarge"}
    

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    or
    = link_to 'Go Back', url_for(:back), :class => 'btn'