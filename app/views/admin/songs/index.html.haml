%h1 Songs
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.song.channel_id", :default => t("activerecord.labels.channel_id", :default => "Channel_id"))
      %th Created at
      %th Actions
  %tbody
    - @songs.each do |song|
      %tr
        %td= song.id
        %td
          = link_to song.channel_id, song_path(song)
        %td= song.created_at
        %td
          = link_to "Edit", edit_admin_song_path(song)
          = link_to "Destroy", admin_song_path(song), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
= link_to "New", new_admin_channel_song_path, :class => 'btn btn-primary'
