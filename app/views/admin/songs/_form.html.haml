= simple_form_for [:admin, @channel, @album, @song], :html => { :multipart => true, :class => 'form-horizontal' } do |f|
  = f.input :title, :input_html => {:class => "input-xlarge"}
  = f.input :price, :input_html => {:class => "input-xlarge"}
  = f.input :filename, :as => :file, :label => "Song"
  = f.input :file_preview, :as => :file, :label => "Song Preview"
  = f.input :active
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    or
    = link_to 'Go Back', url_for(:back), :class => 'btn'
