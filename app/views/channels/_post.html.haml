- if post.present?
  %h2.heading Recent Updates
  .row-fluid.items
    .span3
      .thumbnail
        = link_to image_tag(post.image.thumb('231x211#').url), post_url(post)
    .span9
      %h4= link_to post.title, post_url(post)
      %p= post.publish_on.strftime('%m/%d/%Y')
      %p= post.description.truncate(280)
