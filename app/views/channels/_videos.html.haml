#most_played_video.carousel.slide
  / Carousel items
  .carousel-inner
    - @videos.each_slice(4) do |videos|
      .item{class: carousel_class(@videos, videos)}
        %ul.thumbnails
          - videos.each do |video|
            %li.span3
              .thumbnail
                %img{:alt => "", :src => video.image.thumb('355x236').url}
                  .caption
                    %h5= video.title
                    %p= video.description
                    %p
                      - if video.publish_on < Time.now
                        = link_with_icon("Watch Free Trailer", video_path(video), "icon-film icon-white", "btn btn-success")
                      - else
                        = link_with_icon("Coming Soon", "#", "icon-film icon-white", "btn btn-inverse")

  - if @videos.size > 5
    %a.carousel-control.left{"data-slide" => "prev", :href => "#most_played_video"} ‹
    %a.carousel-control.right{"data-slide" => "next", :href => "#most_played_video"} ›
