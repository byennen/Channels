- title @channel.name

.row
  .span12
    %ul.breadcrumb.entry-title
      %li.active= @channel.name

.row
  .span12
    #gallery
      = image_tag @channel.banner_image.url if @channel.banner_image_uid
      / = image_tag @channel.banner_image.url if @channel.banner_image_uid
      / %img{:src => "assets/demo_images/3.jpg"}/
    /   %img{:src => "demo_images/4.jpg"}/
    /   %img{:src => "demo_images/5.jpg"}/
    /   %img{:src => "demo_images/6.jpg"}/
    / #thumbs
    /   %img{:src => "demo_images/11.jpg"}/
    /   %img{:src => "demo_images/22.jpg"}/
    /   %img{:src => "demo_images/33.jpg"}/
    /   %img{:src => "demo_images/44.jpg"}/
    /   %img{:src => "demo_images/55.jpg"}/
    /   %img{:src => "demo_images/66.jpg"}/
    / %a#next{:href => "javascript:;;"}
.row
  .span12
    .page-header
      %h1
    %p

.row
  .span8
    %h1= @channel.name
    %p{:style => "padding: 20px 0px;"}= @channel.description

    %h2 Videos
    %ul
      - @videos.each do |video|
        %li
          .thumbnail
            = image_tag(video.image.thumb('260x180#').url)
            .caption
              %h5= video.title
              %p.description= video.description.truncate(125)
              %p
                = link_with_icon("Watch", video_url(video), "icon-film icon-white", "btn btn-info pjax")
    %h3 Songs
    %table.table.table-striped
      %thead
        %tr
          %th Play
          %th Title
          %th Album
          %th
      %tbody
      - @songs.each do |song|
        %tr
          %td.center= link_with_icon("Play", song_url(song), "icon-play icon-white", "btn btn-info",  {:class => "play", :id => "play-#{song.id}", "data-song" => song.id})  
          %td.center= song.title
          %td.center=# Channel.albums.title

    %h4 Photos
    %ul.thumbnails
      - @photos.each do |photo|
        %li.span3
          .thumbnail
            = image_tag(photo.image.thumb('280x160#').url)


  .span4
    .rightsidebar
      .row
        .span4
          %h3 Recent Posts
      = render :partial => 'post', :collection => @posts
