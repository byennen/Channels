- title "Channels"

.row
  .span12
    %ul.breadcrumb.entry-title
      %li.active= Channels

.row
  .span12
    %ul.thumbnails
      - @channels.each do |channel|
        %li.span4
          .thumbnail
            = link_to image_tag(channel.banner_image.thumb('301x170#').url), root_url(subdomain: channel.subdomain), class: 'pjax' if channel.banner_image
            .caption
              %h5= channel.name
              %p= truncate(channel.description, :length => 80, :omission =>  "...")

.row
  .span12
    .space_filler{:style => 'padding: 0 0 34%;'}