.navbar-inner
  .container-fluid
    = link_to "Altimarc", root_url(subdomain: "www"), :class => "brand pjax"
    %ul.nav
      %li.what_is_altimarc
        %a{:href => about_url}
          %strong
            What is
            %br
            Altimarc?
      %li.discover_great_channels
        %a{:href => channels_url}
          %strong Discover
          %br
          unique channels
      %li.win_amazing_giveaways
        %a{:href => giveaways_url}
          %strong Win
          %br
          fan experiences
    %ul.nav.pull-right
      - if user_signed_in?
        %li
          %a{:href => '', "data-toggle" => "dropdown", :class => 'me'}
            %strong
              - if current_user.first_name.present?
                = current_user.first_name
              - else
                Me
            %i.icon.icon-chevron-down


          %ul.dropdown-menu
            %li= link_with_icon("My Downloads", downloads_user_url(subdomain: "www"), "icon-download-alt", "pjax")
            %li= link_with_icon("Edit account", edit_user_registration_url(subdomain: "www"), "icon-pencil", "pjax")
            %li= link_with_icon("Logout", logout_url(subdomain: "www"), "icon-lock", :id => "logout")
      - else
        - if current_channel
          %li= link_to "Sign Up", signup_url(subdomain: 'www', host: APP_CONFIG['domain'], :state => current_channel.uuid)
          %li= link_to "Log In", login_url(subdomain: 'www', host: APP_CONFIG['domain'], :state => current_channel.uuid)
        - else
          %li= link_to "Sign Up", signup_url(subdomain: 'www', host: APP_CONFIG['domain'])
          %li= link_to "Log In", login_url(subdomain: 'www', host: APP_CONFIG['domain'])
