#no_facebook_signup.modal.hide
  .modal-header
    %a.close{"data-dismiss" => "modal"} Ã—
    %h3 Sign up
  .modal-body
    .row
      .span5#form
        = simple_form_for(User.new, :as => "user", :url => registration_path("user"), :html => {:class => 'form-horizontal'}) do |f|
          = f.error_notification

          = f.input :first_name, :class => "input-xlarge"
          = f.input :last_name
          = f.input :email, :required => true
          = f.input :password, :required => true
          = f.input :password_confirmation, :hint => '6 characters or longer.', :required => true

          .form-actions{:style => "background: none;"}
            %a.btn.btn-large{"data-dismiss" => "modal"} Cancel
            or
            = f.submit "Create my account", :class => 'btn btn-success btn-large', :id => 'create-my-account'
