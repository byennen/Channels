= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :class => 'form-stacked') do |f|
  %h1.heading Edit #{resource_name.to_s.humanize}
  = devise_error_messages!
  = f.input :first_name, :class => 'input-large'
  = f.input :last_name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation, :hint => "Leave blank if you don't want to change it"
  = f.input :current_password, :required => true, :hint => 'We need your current password to confirm your changes'
  = f.submit "Update", :class => 'btn btn-primary btn-large', :style => 'margin-top: 20px;'

.membership{:style => 'margin-top: 70px;'}
- if current_user.unpaid_member?
  %h2.heading Membership
  = link_to "Become a Paid Member", subscribe_user_url, :class => 'btn btn-success btn-large'

- if current_user.paid_member?
  = form_for(resource, :as => resource_name, :url => cancel_membership_path, :html => {:method => :post}, :class => "form-stacked") do |f|
    %h2.heading Memebership
    = f.submit "Please cancel my Membership", :class => 'btn btn-danger'
