= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'form-stacked') do |f|
  %fieldset
    %legend Sign Up
    = devise_error_messages!
    .clearfix
      = f.label :first_name
      .input
        = f.text_field :first_name, :class => 'xlarge'
    .clearfix
      = f.label :last_name
      .input
        = f.text_field :last_name, :class => 'xlarge'
    .clearfix
      = f.label :email
      .input
        = f.email_field :email, :class => 'xlarge'
    .clearfix
      = f.label :password
      .input
        = f.password_field :password, :class => 'xlarge'
    .clearfix
      = f.label :password_confirmation
      .input
        = f.password_field :password_confirmation, :class => 'xlarge'
    .actions
      = f.submit "Sign up", :class => 'btn primary'
      = link_to "Aleady a member of Altimarc?", new_session_path(resource_name), :class => 'btn'
