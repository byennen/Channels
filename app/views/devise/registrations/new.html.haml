- title "Sign up with Email"

.account-container.register
  .content.clearfix
    %h1 Create Your Account
    .login-social
      %p Sign in using social network:
      -#- if params[:state]
        -#%a.btn.btn-primary.btn-large#login{:href => "/auth/facebook?state=#{params[:state]}"}
          -#%i.icon-facebook
          -#Sign in with Facebook
      -#- else
      %a.btn.btn-primary.btn-large#login{:href => "/auth/facebook"}
        %i.icon-facebook
        Sign in with Facebook
    .login-fields
      %p Create your free account:
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = f.error_notification
        = f.input :first_name, :class => "input-xlarge", :placeholder => "First Name", :label => false
        = f.input :last_name, :placeholder => "Last Name", :label => false, :class => "input-xlarge"
        = f.input :email, :required => true, :placeholder => "Email", :label => false, :class => "input-xlarge"
        = f.input :password, :required => true, :placeholder => "Password", :label => false, :class => "input-xlarge"
        = f.input :password_confirmation, :hint => '6 characters or longer.', :required => true, :placeholder => "Password Confirmation", :label => false, :class => "input-xlarge"
        -#= f.submit "Register", :class => 'btn btn-primary btn-large', :id => 'create-my-account'
        .login-actions
          %button.button.btn.btn-primary.btn-large#create-my-account Register

.login-extra
  Already have an account?
  = link_to "Login", login_url
