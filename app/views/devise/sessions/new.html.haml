- title "Login"

:css
  #signup_box {
    margin: 160px auto 0; 
    float: none;
  }
  #signup_box p {
    text-align: center;
    color: #575B61;
    margin-bottom: 40px;
  }
  #signup_box img.logo {
    padding: 30px 0 5px 28px;
  }
  #signup_box .btn-facebook {
    background: #455C8C url('assets/fb-icon.png') no-repeat 2px 4px;
    text-shadow: 1px 1px 1px #304371;
    border: 1px solid #425681;
    width: 193px;
    color: white;
    font-weight: bold;
    margin: 30px 0px 8px 130px;
    font-size: 14px;
    padding: 10px 10px 10px 40px;
    -moz-border-radius: 3px; 
    border-radius: 3px;
  }
  .overlay {
    background: rgba(255, 255, 255, .3); 
    padding: 6px; 
    -moz-border-radius: 5px; 
    border-radius: 5px;
  }
  .overlay-inside {
    background: white;
    -moz-border-radius: 5px;
    border-radius: 5px;
    padding-bottom: 50px;    
  }

- if params[:action] == 'new'
  .row
    .span6#signup_box
      .overlay
        .overlay-inside
          = image_tag('logo-login.png', :class => 'logo')
          %p Entertainment and once in a life time opportunities!
          = link_to "Sign in with Facebook", "/auth/facebook", id: "login", :class => 'btn-facebook'
          .span4
            = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              %fieldset
                .clearfix
                  = f.label :email
                  .input
                    = f.email_field :email
              %fieldset
                .clearfix
                  = f.label :password
                  .input
                    = f.password_field :password
              - if devise_mapping.rememberable?
                .clearfix
                  = f.check_box :remember_me
                  = f.label :remember_me
              %div= f.submit "Sign in"
            = render :partial => "devise/shared/links"
