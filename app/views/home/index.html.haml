- @keywords = "music, music channels, music tv, watch live, live video production, stream music online, music broadcast, country music, music downloads, music videos, online music, games, free online games, free games, online games, video games, powerball, powerball numbers, powerball winning numbers"
- @description = "Entertainment, Games, and once in a life time opportunities to meet celebrities. Join today!"

- if @active_channels > 1
  = render 'home/carousel'
  = render 'home/quote'
  = render 'home/new'
  = render 'shared/music/latest'
  = render 'shared/videos/latest'
- else
  .span
    #slideshow.nivoSlider
      - @channels.each do |channel|
        - if channel.active?
          = link_to image_tag(channel.banner_image.url), root_url(subdomain: channel.subdomain) if channel.banner_image
        - else
          = link_to image_tag(channel.banner_image.url), "#coming-soon!" if channel.banner_image
    -#= link_to image_tag('alive-at-brushy.jpg', :class => 'intro-photo'), root_url(:subdomain => "aliveatbrushy")
  -#= render 'home/quote'
.row-fluid{:style => 'margin-top: 40px;'}
  .span4
    %h3.heading Featured Video
    .thumbnail
      %img{:alt => "", :src => @featured_video.image.thumb('488x294#').url if @featured_video.image}
        .caption
          %h5= @featured_video.title
          %p= @featured_video.description
          = link_with_icon("Watch Free Trailer", video_url(@featured_video, :host => "#{@featured_video.channel.subdomain}.#{APP_CONFIG['domain']}"), "icon-film icon-white", "btn btn-success btn-large")
          
  .span4
    %h3.heading Featured Song
    .thumbnail
      %img{:alt => "", :src => @featured_song.album.image.thumb('488x294#').url if @feature_song.album.image}
        .caption
          %h5{:style => 'margin-bottom: 23px;'}= @featured_song.title
          = link_with_icon("Listen Free Preview", song_url(@featured_song), "icon-play icon-white", "btn btn-success btn-large",  {:class => "play", :id => "play-#{@featured_song.id}", "data-song" => @featured_song.id})

  .span4
    %h3.heading Featured Album
    .thumbnail
      %img{:alt => "", :src => @featured_album.image.thumb('488x294#').url if @feature_album.image}
        .caption
          %h5= @featured_album.title
          %p= @featured_album.description
          = link_with_icon("Listen Free Preview", album_url(@featured_album, :host => "#{@featured_video.channel.subdomain}.#{APP_CONFIG['domain']}" ), "icon-play icon-white", "btn btn-success btn-large")
