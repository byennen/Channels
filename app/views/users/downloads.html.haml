.content-wrapper
  .row-fluid
    .span
      .widget
        .widget-header
          %i.icon-user
          %h3 My Downloads
        / /widget-header
        .widget-content
          %table.table.table-striped
            %thead
            %tbody
              - @songs.each do |song|
                %tr
                  %td= song.title
                  %td= link_to 'Download', '#'
              - @albums.each do |album|
                %tr
                  %td= album.title
                  %td= link_to 'Download', '#'
   
