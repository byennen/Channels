class Musicplayer extends Spine.Controller
  echo = console.log

  events:
    "click #player_previous": "previousTrack"
    "click #player_next":     "nextTrack"
    "click #player_play":     "playMusic"

  constructor: ->
    super
    Spine.Route.setup()
    

  init: ->
    @player = $('#jplayer')
    @player.jPlayer({
      swfPath: "/assets/",
      ready: (event) ->
            $(@).jPlayer("setMedia", {
                mp3: "/assets/song.mp3"
            })
            $(@).jPlayer("play")
    })

  previousTrack: (event) ->
    echo "previos track clicked"

  nextTrack: (event) ->
    echo "next track clicked"

  playMusic: (event) ->
    echo "playing..."
    if @track.paused
      @track.play()
      echo "Play music"
    else
      @track.pause()
      echo "Stop music"

  playNextSong: () ->
    response = $.getJSON("/songs/next_song.json", (data)=>
      @player.jPlayer("setMedia", {
        mp3: @setSong(data["filename"])
      })
      @player.jPlayer("play")
    )

  setSong: (song_filename) ->
    echo song_filename


window.Musicplayer = new Musicplayer(el: $('#player'))
