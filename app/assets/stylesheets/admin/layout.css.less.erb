body {
  background: url(<%= asset_data_uri 'bg.png' %>) repeat-x #ededed;
}

.navbar {
  .navbar-inner {
    background: url(<%= asset_data_uri 'layout/header-bg.png' %>) repeat-x;
  }
  .brand {
    background: url(<%= asset_data_uri 'layout/logo.png' %>) no-repeat scroll 0px 0px transparent;
    width: 180px;
    height: 31px;
    color: transparent;
    padding: 0 5px 0;
    margin: 5px;
  }
}

.box {
  background: #fff;
  -moz-box-shadow: 0px 0px 5px #888;
  -webkit-box-shadow: 0px 0px 5px #888;
  box-shadow: 0px 0px 5px #888;
  border: #ccc solid 2px;
  margin: 0 30px 30px 0;
  width: 30%;
  float: left;
  .inside {
    padding: 10px;
  }
}
.last {
  margin-right: 0 !important;
}


.content-boxes {
  margin: 10px 0 10px;
  padding: 0;
}
.content-background {
  background: white;
  margin: 10px 30px 30px;
  padding: 20px 30px 30px;
  -moz-box-shadow: 0px 0px 5px #888;
  -webkit-box-shadow: 0px 0px 5px #888;
  box-shadow: 0px 0px 5px #888;
  border: #ccc solid 2px;
  overflow: auto;
}


#breadcrumb ul {
  margin: 0px 0 30px 0;
  font-size: 20px;
  font-weight: bold;
}
#breadcrumb li {
  display: inline;
}

.simple_form img {
  margin: 0 0 20px 160px;
}

#uploader{
  width: 500px;
  border: 1px solid #aaa;
  min-height: 300px;
  padding: 10px;
  border-radius: 7px;
}

progress{
  width: 200px;
}

#drag_text{
  position: absolute;
  z-index: 0;
  top:0;
  left:0;
  width: 500px;
  padding-top:100px;
  text-align: center;
  font-size: 2em;
  font-weight: bold;
  color: #ddd;
  font-style:italic;
}

#uploading_files, #file_upload{
  position: relative;
  z-index: 1;
}

#drag_remark{
  font-size: 0.5em;
}

.remove_link{
  color: red;
  text-decoration: none;
}