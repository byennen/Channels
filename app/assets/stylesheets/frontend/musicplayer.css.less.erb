#player {
  height: 0px;
  overflow: hidden;
  background: #dbdada url(<%= asset_data_uri 'musicplayer/bg.gif' %>) repeat;
  margin: 0 -20px 0 -20px;
  #inside_player {
    margin: 10px 0;
    overflow: hidden;
  }
  #cover-art {
    float: left;
    margin: 0 15px 0;
    img {
      height: 70px;
      width: 70px;
      border: 1px solid white;
    }
    img:hover {
      background: black;
    }
  }
  #track-meta-data {
    height: 40px;
    letter-spacing: 0.03em;
    margin-right: 5px;
    white-space: nowrap;
    ul {
      li {
        display: inline;
        font-size: 11px;
        text-transform: uppercase;
      }
    }
    a {
      color: #575555;
      font-weight: bold;
    }
    .divider {
      color: #e50b14;
    }
  }
  #player_control_image {
    margin: 10px 15px 0;
    position: absolute;
    width: 70px;
    height: 70px;
    opacity: 0.7;
  }
  .paused:hover {
    background: url('../../../assets/musicplayer/overlay_play.png') no-repeat 17px 20px;
  }
  .playing:hover {
    background: url('../../../assets/musicplayer/overlay_pause.png') no-repeat 17px 20px;
  }
}
