#player {
  height: 0px;
  overflow: hidden;
  #inside_player {
    margin: 10px 0;
    overflow: hidden;
  }
  #cover-art {
    float: left;
    margin: 0 15px 0;
    img {
      height: 70px;
      width: 70px;
      border: 1px solid white;
    }
  }
  #track-meta-data {
    height: 40px;
    letter-spacing: 0.03em;
    margin-right: 5px;
    white-space: nowrap;
    ul {
      li {
        display: inline;
        font-size: 11px;
        text-transform: uppercase;
      }
    }
    a {
      color: #575555;
      font-weight: bold;
    }
  }
}
