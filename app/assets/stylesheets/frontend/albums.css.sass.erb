.info
  background: #FFC
  border-top: 1px solid #ccc
  border-bottom: 1px solid #ccc
  p
    margin: 15px 20px
    line-height: 1.3em

.coupon_link
  padding: 20px 0

#album_details
  h1
    font-size: 18px
    font-weight: bold
  #buy_now
    margin: 0 0 20px 0
  #price
    padding-top: 9px
    margin-bottom: 10px
    span.price
      font-weight: bold
      color: red
      font-size: 40px
    .exclusive
      color: black
      padding: 0 0 0 5px
      font-size: 20px
    .download
      margin-bottom: 5px

#cover
  margin: 100px 0 40px
  .span
    float: none
    margin: 0 auto
    width: 500px
    height: 440px

#album_details
  background: white
  margin: 0 auto
  float: none
  width: 500px
  -moz-border-radius: 5px
  border-radius: 5px
  #inside_album_details
    padding: 10px

.albums
  #songs
    color: black
  a.not-released
    color: #999
  p.release-price
    color: black
    text-decoration: line-through
    padding: 0
    margin: 0
  #songs
    p.title
      font-size: 16px
      font-weight: bold
      padding-top: 9px
    .play-button
      width: 35px
    .buy-button .btn
      margin-top: 4px
    .coming-soon a
      margin-top: 10px

.songs
  .play-button
    width: 35px
  p.title
    font-size: 16px
    font-weight: bold
    padding-top: 9px
    color: black

