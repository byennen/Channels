html, body { height: 100%; margin: 0; }

body {
  margin-top: 50px;
	font-size: 14px;
  min-height: 100%;
}

.sessions, .registrations {
  overflow: hidden;
}

.container {
  width: 980px;
}

div.content div.container{
  background: none repeat scroll 0 0 #FFFFFF;    
  padding: 20px;
  clear: both;
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto 150px;
}

#footer, #push {
  height: 150px;
}

.background-wrapper {
  background: url(<%= asset_data_uri 'bg.png' %>) repeat-x #eee;
  clear: both;
}

.navbar {
  background: #dbdada url(<%= asset_data_uri 'musicplayer/bg.gif' %>) repeat;
  .brand {
    background: url(<%= asset_data_uri 'layout/logo.png' %>) no-repeat scroll 0px 0px transparent;
    color: transparent;
    width: 65px;
    height: 45px;
    margin: 2px 0 0 -10px !important;
    padding: 0 !important;
  }
}

header {
  margin-bottom: 10px;
}

div#ribbon{
  padding: 0;
  margin: 0;
  width: 100%;
  -webkit-box-shadow: 0 0 -6px rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0 0 -6px rgba(0,0,0,0.3);
  box-shadow: 0 0 -6px rgba(0, 0, 0, 0.3);
}


.heading {	
	border: 0px;
  padding: 7px 14px;
  margin: 0 0 18px;
  list-style: none;
  background-color: #fbfbfb;
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  background-repeat: repeat-x;
  border: 1px solid #ddd;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  filter: progid:dximagetransform.microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
  -webkit-box-shadow: inset 0 1px 0 #ffffff;
  -moz-box-shadow: inset 0 1px 0 #ffffff;
  box-shadow: inset 0 1px 0 #ffffff;
	font-family: Rationale,sans-serif;
	font-size: 22px;
}



div.skin-slidedeck{	
	margin-bottom: 20px;
	dl.slidedeck  dd {
  	margin: 0;
  	padding: 0;
  	h1 {
    	font-size: 40px;
    	margin-bottom: 15px;
    }
    .wrap-image{
      width: 690px;
      height: 360px;
      margin: 10px 5px 10px 30px;
      position: relative;
      z-index: 1;

    }
    .wrap-intro{
    	width:370px; 
      position: absolute;
      z-index: 2;
      right: 30px;
      top: 145px;
      padding: 10px;
    }
    .white-opacity {
      background: #eee;
      -moz-border-radius: 10px;
      border-radius: 10px;
      opacity:0.9;
    }
    .white-color {
      color: white;
    }
    .overlay{
      position: absolute;
      z-index: 3;
      background: transparent url(<%= asset_data_uri 'banners/overlay.png' %>);
      width: 690px;
      height: 360px;
    }
  }
}

div.content blockquote {
    font-family: Rationale;
    margin: 0px 20px 20px 20px;
    padding-left: 50px;
    background: transparent url(<%= asset_data_uri 'quote.gif' %>) no-repeat; 
    border-left: none;
}
div.content blockquote h3{
    font-size: 23px;
}
div.content blockquote small{
    color: #777;
    font-size: 16px;
}

div.content ul.entry-title{	
    padding:0px;	
	border: 0px;
}

div.content ul.entry-title{	
  padding: 7px 14px;
  margin: 0 0 18px;
  list-style: none;
  background-color: #fbfbfb;
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  background-repeat: repeat-x;
  border: 1px solid #ddd;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  filter: progid:dximagetransform.microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
  -webkit-box-shadow: inset 0 1px 0 #ffffff;
  -moz-box-shadow: inset 0 1px 0 #ffffff;
  box-shadow: inset 0 1px 0 #ffffff;
}
div.content ul.entry-title li{	
	font-family: Rationale,sans-serif;
	font-size: 22px;
}

div.content div.rightsidebar,
div.content div.leftsidebar{
	border-right: 1px solid #F0F0F0;
	margin-bottom: 20px;
}

div.content div.rightsidebar{
	border-right: 0px;
	border-left: 1px solid #F0F0F0;	
}

div.content div.rightsidebar div.span4,
div.content div.leftsidebar div.span4{
	width:290px;	
}

div.content div.rightsidebar div.span4,
div.content div.rightsidebar div.span1,
div.content div.rightsidebar div.span3{
	margin-left: 28px;
}

div.content div.rightsidebar h3,
div.content div.leftsidebar h3{
	line-height: 36px;
}

div.content div.rightsidebar div.items,
div.content div.leftsidebar div.items{
	margin-top: 20px;
}

div.content div.rightsidebar div.last,
div.content div.leftsidebar div.last{
	margin-bottom: 20px;
}

div.content div.rightsidebar div.items div.span3,
div.content div.leftsidebar div.items div.span3{
	margin: 0 5px;
}


div#about {
    background: none repeat scroll 0 0 #484848;
    padding: 20px;
	color: #fff;
}

div#footer {
  background: none repeat scroll 0 0 #dbdada;
  padding: 50px 20px;
  color: #575555;
  margin-top: -150px;
  ul {
    margin: 5px 0 0 0;
    list-style:none;
    li {
      font-size: 12px;
    }
  }
  p{
    margin:0px 0 10px;
  }
  p.copyright{
    margin: 10px 0 0px;
  }
  a {
    color: #575555;
  }
}

#ads {
  margin: 0 -20px 0 0;
}

#first_time_vistor {
  display: none;
}
