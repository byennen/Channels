a.sm2_button
  position: relative
  display: inline-block
  width: 34px
  height: 35px
  background: url(<%= asset_data_uri 'musicplayer/play-and-pause.png' %>)
  &:focus
    outline: none
  &.sm2_paused:hover
    background: url(<%= asset_data_uri 'musicplayer/play-and-pause.png' %>)
    background-position: 0 0
  &:hover
    background: url(<%= asset_data_uri 'musicplayer/play-and-pause.png' %>)
    background-position: 0 0
  &.sm2_playing
    background: url(<%= asset_data_uri 'musicplayer/play-and-pause.png' %>)
    background-position: 0 36px
    &:hover
      background: url(<%= asset_data_uri 'musicplayer/play-and-pause.png' %>)
      background-position: 0 36px
