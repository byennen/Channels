#push
  height: 140px
div#footer
  bottom: -21px
  clear: both
  background: none repeat scroll 0 0 white
  color: #575555
  padding: 20px 0
  -webkit-box-shadow: 0 0 6px rgba(0, 0, 0, 0.5)
  -moz-box-shadow: 0 0 6px rgba(0, 0, 0, 0.5)
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.5)
  ul
    margin: 5px 0 0 0
    list-style: none
    li
      font-size: 12px
  p
    margin: 0px 0 10px
    &.copyright
      margin: 52px 0 0px
  a
    color: #575555

@media (max-width: 750px)
  div#footer
    text-align: center
@media (min-width: 750px)
  div#footer
    .social, .copyright
      float: right
      text-align: right
