#channel_banner_image
  margin: 0 -20px 0 -20px
  height: 505px
  img
    height: 505px
    width: 100%

.videoplayer
  background: url(<%= asset_data_uri 'html5video/watch-area-bg.png' %>) repeat-x
  padding: 40px 0
  #player
    margin: 0 auto
    width: 896px
    height: 504px
  #video_info
    h2
      color: white
    #details
      color: white
      padding: 20px 0

#posts .items
  padding-bottom: 20px

.read-more
  margin-bottom: 40px

.rightsidebar
  #description p
    padding: 20px 0
  .thumbnails
    margin: 0 auto
    text-align: center

ul#video_social_sharing
  margin: 0
  padding: 10px 0 0
  li
    display: inline
  a
    color: white
    padding-right: 20px
    &:hover
      color: red

#social_media_links
  li
    display: inline
  .twitter-follow-button
    padding: 3px 0 0

.channels, .videos
  h3
    margin-bottom: 5px

#video_info
  h2
    font-size: 16px
    padding: 20px 0 0
  a
    color: white
  #small_ad
    width: 300px
    height: 70px
    margin: 22px 0 0
    display: none
  #video_info_inside
    height: 95px
