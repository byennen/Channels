.videoplayer
  background: url(<%= asset_data_uri 'html5video/watch-area-bg.png' %>) repeat-x
  padding: 20px 0
  #player
    margin: 0 auto
    width: 896px
    height: 504px
  #video_info
    h2
      color: white
    #details
      color: white
      padding: 20px 0

#posts .items
  padding-bottom: 20px

#video_info h2
  padding: 20px 0 0

.read-more
  margin-bottom: 40px

.rightsidebar
  h1
    text-align: center
    padding: 0 0 20px
  #description p
    padding: 20px 0
  .thumbnails
    margin: 0 auto
    text-align: center

ul#video_social_sharing
  margin: 0
  padding: 10px 0 0
  li
    display: inline
  a
    color: white
    padding-right: 20px
    &:hover
      color: red

#social_media_links
  li
    display: inline
  .twitter-follow-button
    padding: 3px 0 0

.channels, .videos
  h3
    margin-bottom: 20px
