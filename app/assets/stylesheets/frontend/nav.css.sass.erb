.navbar-inner
  filter: none
  height: 60px
  -webkit-box-shadow: 0 0 6px rgba(0, 0, 0, 0.5)
  -moz-box-shadow: 0 0 6px rgba(0, 0, 0, 0.5)
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.5)
  background: #fff
  padding: 0
  .container-fluid
    min-width: 768px
    max-width: 1560px
    margin: 0 auto
    .brand
      background: url(<%= asset_data_uri 'layout/logo.png' %>) no-repeat scroll 0px 0px transparent
      color: transparent
      height: 60px
      padding: 0
      margin: 0
      text-shadow: none
      width: 250px
      &:hover
        background: url(<%= asset_data_uri 'layout/logo-hover.png' %>) no-repeat scroll 0px 0px transparent

  .nav
    li
      border-right: #ddd 1px solid
      a
        color: #999
    .what_is_altimarc
      font-weight: bold
      font-size: 1.1em
      a
        color: black
        &:hover
          color: #999
    .discover_great_channels
      a
        &:hover
          strong
            color: #034184
        strong
          color: #0062cc
          font-size: 1.1em
    .win_amazing_giveaways
      a
        &:hover
          strong
            color: #1d8404
        strong
          color: #26b204
          font-size: 1.1em
    .pull-right
      li
        display: inline
        padding: 20px
        height: 60px
        list-item: none
        a
          color: #999

.navbar-inner ul.pull-right 
  li
    height: 60px
    border: none
    a
      padding: 20px
      color: #000
      &:hover
        color: #0062cc
  a.me
    font-size: 1.1em
    padding-right: 5px
    .icon
      margin-top: 3px
      margin-left: 5px
.dropdown
  a
    padding: 0
