.navbar 
  .nav.sessions
    li
      a
        padding: 20px 15px
        color: black

.account-container
  width: 380px
  display: block
  margin: 160px auto 0 auto
  background: #f9f9f9
  border: 1px solid #d5d5d5
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  border-radius: 5px
  box-shadow: 0px 0px 2px #dadada, inset 0px -3px 0px #e6e6e6
  color: #838383

.login-fields
  .field
    margin-bottom: 1.25em
  label
    display: none
  input
    font-family: 'Open Sans'
    font-size: 13px
    color: #8e8d8d
    padding: 9px 15px 9px 50px
    background-color: #fdfdfd
    width: 255px
    display: block
    margin: 0 0 1.25em
    box-shadow: inset 2px 2px 4px #f1f1f1
  p
    margin: 8px 0

.username-field
  background: url(../../../assets/signin/user.png) no-repeat

.password-field
  background: url(../../../assets/signin/password.png) no-repeat

.login-actions
  float: left
  width: 100%
  margin-top: -1em
  margin-bottom: 1.25em

.login-social
  padding: 10px 0 15px
  border: 1px dotted #CCC
  border-right: none
  border-left: none

span.login-checkbox
  float: left
  margin-top: 31px
  > input[type='checkbox']
    opacity: 0
    float: left
    width: 15px
    + label
      clear: none
      height: 15px
      display: block
      padding: 0 0 0 22px
      margin: 0
      font-size: 12px
      line-height: 1.2em
      background: url(../../../assets/signin/check.png) no-repeat 0 0
      cursor: pointer
    &:checked + label
      background-position: 0 -15px

/** Text Under Box*

.login-extra
  display: block
  width: 300px
  margin: 1.5em auto
  text-align: center
  line-height: 19px
  text-shadow: 1px 1px 0px #fff
  color: #838383

.account-container h1
  margin-bottom: .4em
  color: #ed1c24

/** Buttons *

.twitter
  position: relative
  height: 32px
  width: 157px
  display: block
  background: url(../../../assets/signin/twitter_btn.png) no-repeat

.fb
  position: relative
  height: 32px
  width: 265px
  display: block
  background: url(../../../assets/signin/fb_btn.png) no-repeat

.twitter:active, .fb:active
  top: 1px

.twitter:hover, .fb:hover
  background-position: 0 -32px

.twitter a
  padding: 5px 0 0 35px
  text-shadow: -1px -1px 0px rgba(0, 0, 0, 0.3)
  color: #fff
  font-weight: bold
  font-size: 11px
  height: 32px
  display: block

.fb a
  padding: 5px 0 0 35px
  text-shadow: -1px -1px 0px rgba(0, 0, 0, 0.3)
  color: #fff
  font-weight: bold
  font-size: 11px
  height: 32px
  display: block
  padding: 5px 0 0 31px

.twitter, .fb
  display: inline-block

.twitter a:hover, .fb a:hover
  color: #FFF
  text-decoration: none

.button
  -webkit-border-radius: 3px
  -moz-border-radius: 3px
  border-radius: 3px
  display: inline-block
  float: right
  margin-top: 18px

.register
  .login-social
    margin-bottom: 1em
  .login-actions
    margin-bottom: 0
  .login-fields input[type="text"],
  .login-fields input[type="email"],
  .login-fields input[type="password"]
    width: 315px
    padding: 8px 0 8px 6px
  h1
    color: #444
    font-size: 30px
    line-height: 36px
  span.login-checkbox
    position: relative
    top: -6px
    width: 200px
    > input[type="checkbox"] + label
      position: relative
      line-height: 1.3em

@media (max-width: 440px)
  .account-container
    width: 280px
    margin-top: 75px
  .login-fields input
    width: 160px
  .login-social
    width: 100%
  .twitter
    display: block
    margin-bottom: 1em
  .register .login-fields input
    width: 204px
    padding-left: 6px

