#signup_box, #create_password
  margin: 160px auto 0
  float: none

#signup_box p, #here_before p, #create_password p
  text-align: center
  color: #575B61
  margin-bottom: 40px

#signup_box img.logo, #here_before img.logo
  padding: 30px 0 5px 28px

#create_password
  img.logo
    padding: 30px 0 5px 28px
  h2
    text-align: center
    margin-bottom: 20px

#signup_box
  #facebook
    float: none
    margin: 0 auto 8px
    width: 218px
  .btn-facebook
    background: #455c8c url('../../../assets/fb-icon.png') no-repeat 2px 4px
    text-shadow: 1px 1px 1px #304371
    border: 1px solid #425681
    width: 193px
    color: white
    font-weight: bold
    font-size: 14px
    padding: 10px 10px 10px 40px
    -moz-border-radius: 3px
    border-radius: 3px

#other_links
  margin: 0 auto
  float: none
  a
    font-weight: bold
  p
    margin: 20px 0 0

#here_before
  margin: 160px auto 0
  float: none
  #form
    margin: 0 auto
    float: none
    width: 318px
    padding-left: 20px

#facebook_photos
  margin: 10px auto 0
  float: none
  padding-left: 20px

.overlay
  background: rgba(255, 255, 255, 0.3)
  padding: 6px
  -moz-border-radius: 5px
  border-radius: 5px

.overlay-inside
  background: white
  -moz-border-radius: 5px
  border-radius: 5px
  padding-bottom: 50px
