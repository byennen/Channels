.tweet
  margin: 0px
  width: 300px
  ul
    padding: 0
    margin: 0
    overflow: hidden
    li.item
      width: 280px
  .tweet_text
    a
      color: #1F82BC
      text-decoration: none
      &:hover
        color: #078D73
        text-decoration: underline

.query .tweet_list
  -webkit-border-radius: .5em
  list-style-type: none

.tweet .tweet_list
  .awesome, .epic
    text-transform: uppercase

.query .tweet_list
  .awesome, .epic
    text-transform: uppercase

.tweet .tweet_list li, .query .tweet_list li
  overflow-y: hidden
  overflow-x: hidden
  border-bottom: 2px solid #EDEDED
  padding: .5em
  line-height: 16px

#follow-button
  margin: 0 auto
