body {
  background: #ededed !important;
  padding-top: 0 !important;
  .background-wrapper {
    padding-top: 80px;
  }
}

.navbar {
  .navbar-inner {
    background: url(<%= asset_data_uri 'layout/header-bg.png' %>) repeat-x;
  }
  .brand {
    background: url(<%= asset_data_uri 'layout/header-logo.png' %>) no-repeat scroll 0px 0px transparent;
    width: 180px;
    height: 31px;
    color: transparent;
    padding: 0 5px 0;
    margin: 5px;
  }
}

.navbar {
	border-bottom: 1px solid #CACACA;
	
	.brand {
		font-size: 20px;
		font-weight: bold;
		color: transparent;
	}
}

h2 a { 
  color: red; 
  a:hover {
  color: red !important;
    text-decoration: none !important;
  }
}

a {
  outline: 0 none;
  -moz-outline: 0 none;
  color: red;
  a:hover, a:active, a:focus {
    outline: 0 none;
    -moz-outline: 0 none;
    text-decoration: none !important;
  }
}

.container {
  width: 980px !important;
}

header {
  .navbar {
    background: #c2c2c2 url(<%= asset_data_uri 'layout/header-bg.png' %>) repeat-x;
    -moz-box-shadow: 0 4px 4px -4px #a09f9f;
    -webkit-box-shadow: 0 4px 4px -4px #a09f9f;
    box-shadow: 0 4px 4px -4px #a09f9f;
    border-bottom: 1px solid #a09f9f;
    top: 0px;
    .navbar-inner {
    }
    .brand {
      background: url(<%= asset_data_uri 'layout/header-logo.png' %>) no-repeat scroll 0px 0px transparent;
      width: 180px;
      height: 31px;
      color: transparent;
      padding: 0 5px 0;
      margin: 5px;
    }
  	h1 {
		  margin-bottom: 0px;
	  }
  }
}

.content {
  background: #fff;
  -moz-box-shadow: 0px 0px 5px #888;
  -webkit-box-shadow: 0px 0px 5px #888;
  box-shadow: 0px 0px 5px #888;
  min-height: 800px;
  .inside {
    padding: 20px;
  }
}

section {
	margin: 100px auto;
	
	nav {
		float:right;
	}
	
	fieldset {
		legend {
			padding-left:15px;
		}
	}
}

footer {
  text-align: center; 
  margin: 20px 0 40px;  
  color: #999999;
  border: none;
  clear: both;
	p {
		margin: 0 auto;
		font-size: 11px;
		text-align:center;
  }
  .inside {
    margin: 10px; 
  }
  a {
    color: #999999;
  }
  ul {
    li {
      display: inline;
      padding-right: 10px;
    }
  }
}

